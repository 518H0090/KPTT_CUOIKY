<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BankPageBasic"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bankimage"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="HỌA MI BANK"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="-10"
            android:shadowDy="10"
            android:shadowRadius="0.03"
            android:paddingTop="30dp"
            />


    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#F756A580"
        >
        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_find_white"
            />
        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_mail"
            />
        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_coin3"
            />
        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_qr"
            />
        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_setting"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TÍNH NĂNG"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="16dp"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                >
                <ImageView
                    android:id="@+id/image_account"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/account_icon"
                    />

                <TextView
                    android:gravity="center"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:text="Tài Khoản"
                    android:textSize="20sp"
                    />"

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/money_transfer"
                    />

                <TextView
                    android:gravity="center"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:text="Chuyển Tiền"
                    android:textSize="20sp"
                    />

            </RelativeLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/account_icon"
                />

            <TextView
                android:gravity="center"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:text="Nạp Tiền"
                android:textSize="20sp"
                />"

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/account_icon"
                />

            <TextView
                android:gravity="center"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:text="Dịch Vụ"
                android:textSize="20sp"
                />

        </RelativeLayout>

    </LinearLayout>





</LinearLayout>